<%= render 'books/error', model: @book %>
   <div class="container px-5 px-sm-0">
      <div class="row">
        <div class="col-md-3">
         <%= render 'users/user', user: @user %>
          <h2 class="mt-3">New book</h2>
         <%= render 'books/book', book: @book %>
        </div> 
      <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      
      <table class="table">
  		   <tbody>
  		     <tr>
  		       <td>
  		         <%= link_to user_path(@book_detail.user_id) do %>
  		           <%= attachment_image_tag User.find(@book_detail.user_id), :profile_image, size: "40x40", fallback: "no_image.jpg" %>
  		           <nav>
  		            <%= User.find(@book_detail.user_id).name %>
  		           </nav>
  		         <% end %>    
  		       </td>
  		       <td>
  		       <%= link_to book_path(@book_detail) do %>
  		         <%= @book_detail.title %>
  		       <% end %>  
  		       </td>
  		       <td><%= @book_detail.body %></td>
  		       <% if @book_detail.user_id == current_user.id %>
  		         <td><%= link_to "Edit", edit_book_path(@book_detail), class:"btn btn-sm btn-success" %></td>
  		         <td><%= link_to "Destroy", book_path(@book_detail), class:"btn btn-sm btn-danger destroy(@book.id)", method: :delete,data: {confirm: "本当に消しますか？"} %></td>
  		       <% end %>
  		     </tr>
  		   </tbody>  
      </table>  
    </div>
   </div>
  </div> 
